@page
@model kindergartenAPP.Pages.Parent.EditModel

<div class="row justify-content-center">
    <div class="row justify-content-center w-75 mt-5 rounded" style="border-style: solid;border-color:#ec008c ">
        <h1 class="text-center fw-bold mt-5" style="color:#ec008c;">Modyfikuj dane</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Opiekun.ID" />
            <input type="hidden" asp-for="Opiekun.UzytkownikID" class="form-control" />
            <div class="form-group row mt-5">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Imie" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Imie" class="form-control h-100" />
                    <span asp-validation-for="Opiekun.Imie" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Nazwisko" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Nazwisko" class="form-control" />
                    <span asp-validation-for="Opiekun.Nazwisko" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.MiejscowoscID" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <select asp-for="Opiekun.MiejscowoscID" asp-items="ViewBag.MiejscowoscID" class="form-select"></select>
                    <span asp-validation-for="Opiekun.MiejscowoscID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Ulica" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Ulica" class="form-control" />
                    <span asp-validation-for="Opiekun.Ulica" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Dom" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Dom" class="form-control" />
                    <span asp-validation-for="Opiekun.Dom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-4">
                    <label asp-for="Opiekun.Lokal" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Lokal" class="form-control" />
                    <span asp-validation-for="Opiekun.Lokal" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Telefon" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Telefon" class="form-control" />
                    <span asp-validation-for="Opiekun.Telefon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Komorka" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Komorka" class="form-control" />
                    <span asp-validation-for="Opiekun.Komorka" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-md-3 fs-3">
                    <label asp-for="Opiekun.Email" class="control-label"></label>
                </div>
                <div class="col-md-9">
                    <input asp-for="Opiekun.Email" class="form-control" />
                    <span asp-validation-for="Opiekun.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row justify-content-center mt-5 mb-3">
                <button type="submit" class="btn fs-2 rounded col-md-5 mb-3" style="color:#ec008c; border:solid; border-color:#ec008c">Zapisz</button>
                <div class="col-md-1"></div>
                <a class="btn rounded fs-2 col-md-5 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="/LegalGuardian/Index">Powrót</a>
            </div>
        </form>
    </div>
</div>

