@page
@model kindergartenAPP.Pages.LegalGuardian.IndexModel



<div class="row justify-content-center">
    <h1 class="text-center fw-bold mt-5" style="color:#ec008c">Wnioski</h1>
    <div class="row mt-5">
        <ul>
            @foreach (var item in Model.Dziecko)
            {
                <li>
                    <div class="row">
                        <div class="col-md">
                            @Html.DisplayFor(modelItem => item.Imie)
                            @Html.DisplayFor(modelItem => item.Nazwisko)
                        </div>
                        <div class="col-md">
                            @Html.DisplayFor(modelItem => item.Pesel)
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayFor(modelItem => item.Placowka.Nazwa)
                        </div>
                        <div class="col-md">
                            @Html.DisplayFor(modelItem => item.PlacowkaOddzial.Nazwa)
                        </div>
                        <div class="col-md-3">
                            @if (item.PlacowkaRekrutacja.Akceptacja == null)
                            {
                                <span>Trwa podejmowanie decyzji</span>
                            }
                            else if (item.PlacowkaRekrutacja.Akceptacja == false)
                            {
                                <div class="text-danger">
                                    @Html.DisplayFor(modelItem => item.PlacowkaRekrutacja.Data)
                                    <span>Wniosek odrzucono</span>
                                </div>
                            }
                            else if (item.PlacowkaRekrutacja.Akceptacja == true)
                            {
                                <div class="text-success">
                                    @Html.DisplayFor(modelItem => item.PlacowkaRekrutacja.Data)
                                    <span>Wniosek zaakceptowany</span>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row justify-content-center mt-5 mb-md-5 m-auto">
                        <a class="btn rounded col-md-3 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="./Edit" asp-route-id="@item.ID">Edytuj</a>
                        <div class="col-md-1"></div>
                        <a class="btn rounded col-md-3 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="./Delete" asp-route-id="@item.ID">Usuń</a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

