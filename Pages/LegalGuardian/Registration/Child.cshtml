@page
@model kindergartenAPP.Pages.LegalGuardian.ChildModel



<div class="row justify-content-center">
    <h1 class="text-center fs-1 fw-bold mt-5" style="color:#ec008c">Wnioski</h1>
    <div class="fs-5 row mt-5">
        @foreach (var item in Model.Dziecko)
        {
            <div class="row">
                <div class="rounded-circle col-1" style="background:#ec008c; width: 10px; height: 30px"></div>
                <div class="col-2">
                    @Html.DisplayFor(modelItem => item.Imie)
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </div>
                <div class="col-2">
                    @Html.DisplayFor(modelItem => item.Pesel)
                </div>
                <div class="col-2">
                    @Html.DisplayFor(modelItem => item.DataUrodzenie)
                </div>
                <div class="col-2">
                    @Html.DisplayFor(modelItem => item.Placowka.Nazwa)
                </div>
                <div class="col-1">
                    @Html.DisplayFor(modelItem => item.PlacowkaOddzial.Nazwa)
                </div>
                <div class="col-2">
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </div>
            </div>
            <div class="w-100 rounded-circle" style="background:#ec008c; height:10px;"></div>
        }
    </div>
</div>

