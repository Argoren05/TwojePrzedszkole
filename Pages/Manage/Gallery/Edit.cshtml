@page
@model kindergartenAPP.Pages.Manage.Gallery.EditModel

@{
    var placowkaID = Model.PlacowkaPlik.PlacowkaID;
}


<h1 class="text-center fs-1 fw-bold mt-5" style="color:#ec008c">Edytuj zdjęcie</h1>
<hr style="color:#ec008c" />
<div class="row justify-content-md-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlacowkaPlik.ID" />
            <input type="hidden" asp-for="PlacowkaPlik.PlacowkaID" />
            <input type="hidden" asp-for="PlacowkaPlik.Rozszerzenie" />
            <input type="hidden" asp-for="PlacowkaPlik.Nazwa" />
            <input type="hidden" asp-for="PlacowkaPlik.Data" class="form-control" />
            <input type="hidden" asp-for="PlacowkaPlik.Folder" class="form-control" />
            <input type="hidden" asp-for="PlacowkaPlik.Link" class="form-control" />

            <div class="form-group">
                <label asp-for="PlacowkaPlik.Opis" class="control-label fs-3"></label>
                <textarea asp-for="PlacowkaPlik.Opis" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group mt-5">
                <label asp-for="PlacowkaPlik.Glowny" class="control-label"></label>
                <select asp-for="PlacowkaPlik.Glowny" class="form-select" style="border-color:#ec008c">
                    <option value="true">Tak</option>
                    <option value="false">Nie</option>
                </select>
            </div>
            <div class="form-group row justify-content-center mt-5 mb-md-3 m-auto">
                <button type="submit" class="btn fs-2 rounded col-md-5 mb-3" style="color:#ec008c; border:solid; border-color:#ec008c">Zapisz</button>
                <div class="col-md-1"></div>
                <a class="btn rounded fs-2 col-md-5 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="./Index" asp-route-id="@placowkaID">Powrót</a>
            </div>
        </form>
    </div>
</div>


