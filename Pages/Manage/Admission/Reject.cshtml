@page
@model kindergartenAPP.Pages.Manage.Admission.RejectModel

@{
    var placowkaID = Model.PlacowkaRekrutacjaLista.PlacowkaID;
}

<div class="row justify-content-center">
    <div class="row justify-content-center mt-5 rounded">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlacowkaRekrutacjaLista.ID" />
            <input type="hidden" asp-for="PlacowkaRekrutacjaLista.PlacowkaID" />

            <h2 class="text-center fw-bold mt-5" style="color:#ec008c;">Informacje o dziecku</h2>
            <div class="row mt-3">
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.Imie" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Imie" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.Nazwisko" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Nazwisko" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.Pesel" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Pesel" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.DataUrodzenie" class="control-label"></label>
                    <input type="date" asp-for="PlacowkaRekrutacjaLista.DataUrodzenie" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.Plec" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Plec" class="form-control" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.Narodowsc" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Narodowsc" class="form-control" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.Obywatelstwo" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.Obywatelstwo" class="form-control" disabled />
                </div>
            </div>

            <h2 class="text-center fw-bold mt-5" style="color:#ec008c;">Informacje o rodzicu</h2>
            <div class="row mt-3">
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.ImieOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.ImieOpiekun" class="form-control" disabled />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PlacowkaRekrutacjaLista.NazwiskoOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.NazwiskoOpiekun" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.TelefonOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.TelefonOpiekun" class="form-control" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.KomorkaOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.KomorkaOpiekun" class="form-control" disabled />
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PlacowkaRekrutacjaLista.EmailOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.EmailOpiekun" class="form-control" disabled />
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col-md-3">
                    <label asp-for="PlacowkaRekrutacjaLista.MiejscowoscOpiekun" class="control-label"></label>
                    <select asp-for="PlacowkaRekrutacjaLista.MiejscowoscOpiekun" asp-items="ViewBag.MiejscowoscOpiekun" class="form-control" disabled></select>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="PlacowkaRekrutacjaLista.UlicaOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.UlicaOpiekun" class="form-control" disabled />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="PlacowkaRekrutacjaLista.DomOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.DomOpiekun" class="form-control" disabled />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="PlacowkaRekrutacjaLista.LokalOpiekun" class="control-label"></label>
                    <input asp-for="PlacowkaRekrutacjaLista.LokalOpiekun" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group row justify-content-center mt-5 mb-md-3 m-auto">
                <button type="submit" class="btn fs-2 rounded col-md-5 mb-3" style="color:#ec008c; border:solid; border-color:#ec008c">Odrzuć wniosek</button>
                <div class="col-md-1"></div>
                <a class="btn rounded fs-2 col-md-5 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="/Manage/Admission/Index" asp-route-id="@placowkaID">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

