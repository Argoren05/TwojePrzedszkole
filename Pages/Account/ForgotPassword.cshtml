@page
@model kindergartenAPP.Pages.Account.ForgotPasswordModel

@{
    ViewData["Title"] = "Zapomniałeś hasła?";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="mt-5 text-center" style="color:#ec008c;">@ViewData["Title"]</h1>
        <hr style="color:#ec008c;" />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mt-5 mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="color:#ec008c; border:solid; border-color:#ec008c" />
                <label asp-for="Input.Email" class="form-label " style="color:#ec008c;">Adres e-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center mt-5 mb-md-3 m-auto">
                <button id="forgotPasswordSubmit" type="submit" class="btn fs-2 rounded col-md-5 mb-3" style="color:#ec008c; border:solid; border-color:#ec008c">Wyślij</button>
                <div class="col-md-1"></div>
                <a class="btn rounded fs-2 col-md-5 text-decoration-none mb-3" style="color:#ec008c; border:solid; border-color:#ec008c" asp-page="./Login">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}