@page
@model kindergartenAPP.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-lg-7 row justify-content-center mt-5">
        <div class="col-6 mb-3">
            <img class="img-fluid" src="~/images/account.png" />
        </div>
        <br />
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border-style: solid; border-color:#ec008c" />
                    <label asp-for="Input.Email" class="form-label">Adres e-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="border-style: solid; border-color:#ec008c"/>
                    <label asp-for="Input.Password" class="form-label">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3" style="color: #ec008c">
                    <label asp-for="Input.RememberMe" class="form-check-label" for="flexCheckDefault" >
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />Zapamiętaj mnie
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color: #ec008c">Zaloguj</button>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6 text-center">
                        <a style="color:#ec008c" id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </div>
                    <div class="col-md-6 text-center">
                        <a style="color:#ec008c" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj się</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}