@page
@model kindergartenAPP.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center">
    <div class="col-lg-7 row justify-content-center mt-5">
        <div class="col-6 mb-3">
            <img class="img-fluid" src="~/images/register.png" />
        </div>
        <br />
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border-style: solid; border-color:#ec008c" />
                    <label asp-for="Input.Email">Adres E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="border-style: solid; border-color:#ec008c" />
                    <label asp-for="Input.Password">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="border-style: solid; border-color:#ec008c" />
                    <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3" style="color: #ec008c">
                    <select asp-for="Input.AccountType" class="form-control" autocomplete="new-password" aria-required="true" style="border-style: solid; border-color:#ec008c">
                        <option> -- wybierz rodzaj konta -- </option>
                        <option value="1">rejestarcja dziecka</option>
                        <option value="2">właścicel / dyrektor placówki</option>
                    </select>
                    <label asp-for="Input.AccountType">Typ konta</label>
                    <span asp-validation-for="Input.AccountType" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg" style="background-color: #ec008c">Zarejestruj</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

